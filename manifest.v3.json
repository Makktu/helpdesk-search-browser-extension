{
  "manifest_version": 3,
  "name": "Helpdesk Search",
  "version": "1.0",
  "description": "Quick search for helpdesk locations and departments",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    },
    "default_popup": "index.html"
  }
}
